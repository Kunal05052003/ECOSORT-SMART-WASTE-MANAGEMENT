                <ul>
                    <li>
                        <a href="#">Buy</a>
                        <ul class="sub-menu">
                            <li><a href="/#waste">Normal Buy</a></li>
                            <li><a href="/#spewaste">Special Offer</a></li>
                        </ul>
                    </li>
                </ul>
                <li><a href="appli">Awareness</a></li>
                <li><a href="/#contactuspage">Contact</a></li>
                <li><a href="login">Login</a></li>

            </ul>
        </div>
    </nav>

    <section>
        <div class="container">
            <div class="user signinBx">
                <div class="imgBx"><img src="img/home_img/login2.jpg" alt="" /></div>
                <div class="formBx">
                    <form action="/llogin" method="post">
                        <h2>Sign In</h2>
                        <input type="text" name="username" placeholder="Username" />
                        <input type="text" name="userpass" placeholder="Password" />
                        
                        
                        <input type="submit" name="" value="Login" />
                        <p class="signup">
                            Don't have an account ?
                            <a href="#" onclick="toggleForm();">Sign Up.</a>
                        </p>
                    </form>
                </div>
            </div>
            <div class="user signupBx" id="ss">
                <div class="formBx">
                    <form action="/signup" method="post">
                        <h2>Create an account</h2>
                        <input type="text" name="name" placeholder="Username" />
                        <input type="email" name="email" placeholder="Email Address" />
                        <input type="text" name="password" placeholder="Create Password" />
                        <input type="text" name="confirmpassword" placeholder="Phone-No" />

                        <label for="role">
                            <select name="role" id="1">
                                <option value="Select">Select the type of Account</option>
                                <option value="buyer">Buyer</option>
                                <option value="seller">Seller</option>
                            </select>
                            </label><br>
                        <input type="submit" name="" value="Sign Up" />
                        <p class="signup">
                            Already have an account ?
                            <a href="#" onclick="toggleForm();">Sign in.</a>
                        </p>
                    </form>
                </div>
                <div class="imgBx"><img src="img/home_img/login.jpg" alt="" /></div>
            </div>
        </div>
    </section>
</body>
<script>
    const toggleForm = () => {
        const container = document.querySelector('.container');
        container.classList.toggle('active');
    };
</script>

